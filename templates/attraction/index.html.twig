{% extends 'front.html.twig' %}
{% block title %}Attraction Index{% endblock %}

{% block body %}
    <div class="page-container">
        <div class="form-container">
            <div class="form-header">
                <h1 class="form-title">Attraction List</h1>
                <a href="{{ path('app_attraction_new') }}" class="btn primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus">
                        <line x1="12" y1="5" x2="12" y2="19"></line>
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                    </svg>
                    Create New
                </a>
            </div>

            <div class="card-container">
                <div class="row">
                    {% for attraction in attractions %}
                        <div class="col-md-4 col-sm-6">
                         <div class="card">
    <img src="{{ asset('uploads/images/' ~ attraction.image) }}" class="card-img-top" alt="{{ attraction.nom }}">
    <div class="card-body">
        <h5 class="card-title">{{ attraction.nom }}</h5>
        <p class="card-text">
            <strong>Region:</strong> {{ attraction.region.nom }}<br>
            <strong>Type:</strong> {{ attraction.type }}<br>
            <strong>Description:</strong> {{ attraction.description|slice(0, 100) }}...
        </p>
        <div class="d-flex justify-content-between">
            <a href="{{ path('app_attraction_show', {'id': attraction.id}) }}" class="btn btn-secondary">
                Show
            </a>
            <a href="{{ path('app_attraction_edit', {'id': attraction.id}) }}" class="btn btn-primary">
                Edit
            </a>
        </div>
    </div>
</div>

                        </div>
                    {% else %}
                        <div class="col-12">
                            <div class="alert alert-info" role="alert">
                                No records found
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <style>
        :root {
            --primary-color: #2563eb;
            --secondary-color: #4b5563;
            --background-color: #f8fafc;
            --border-color: #e2e8f0;
            --hover-color: #1d4ed8;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background-color: var(--background-color);
            color: #1e293b;
            line-height: 1.5;
        }

        .page-container {
            width: 100%;
            max-width: 900px;
            padding: 2rem 1rem;
            margin: 0 auto;
        }

        .form-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            padding: 2rem;
        }

        .form-header {
            padding: 1.5rem 2rem;
            border-bottom: 1px solid var(--border-color);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .form-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #1e293b;
            margin: 0;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.2s;
            border: 1px solid transparent;
            text-decoration: none;
        }

        .btn.primary {
            background-color: var(--primary-color);
            color: white;
        }

        .btn.primary:hover {
            background-color: var(--hover-color);
        }

        .btn.secondary {
            background-color: var(--secondary-color);
            color: white;
        }

        .btn.secondary:hover {
            background-color: #374151;
        }

        .table-container {
            margin-top: 1.5rem;
            overflow-x: auto;
        }

        .styled-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
            background: white;
            border-radius: 8px;
            overflow: hidden;
        }

        .styled-table th, .styled-table td {
            padding: 1rem;
            border-bottom: 1px solid var(--border-color);
            text-align: left;
        }

        .styled-table th {
            background: var(--background-color);
            color: #4b5563;
            font-weight: 600;
        }

        .styled-table tr:hover {
            background-color: #f1f5f9;
        }

        .no-records {
            text-align: center;
            padding: 1rem;
            color: #6b7280;
        }

        .action-buttons {
            display: flex;
            gap: 0.5rem;
        }

        @media (max-width: 640px) {
            .form-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }

            .action-buttons {
                flex-direction: column;
            }
        }
    </style>
{% endblock %}

