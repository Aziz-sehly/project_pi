{% extends 'back.html.twig' %}

{% block title %}Attraction{% endblock %}

{% block body %}
    <div class="page-container">
        <div class="form-container">
            <div class="form-header">
                <h1 class="form-title">Attraction Details</h1>
                <a href="{{ path('app_attraction_index') }}" class="back-link">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>
                    Back to List
                </a>
            </div>

            <div class="show-content">
                <div class="show-group">
                    <div class="show-label">ID</div>
                    <div class="show-value">{{ attraction.id }}</div>
                </div>

                <div class="show-group">
                    <div class="show-label">Name</div>
                    <div class="show-value">{{ attraction.nom }}</div>
                </div>

                <div class="show-group">
                    <div class="show-label">Type</div>
                    <div class="show-value">{{ attraction.type }}</div>
                </div>

                <div class="show-group">
                    <div class="show-label">Description</div>
                    <div class="show-value">{{ attraction.description }}</div>
                </div>

                <div class="show-group">
                    <div class="show-label">Region</div>
                    <div class="show-value">{{ attraction.region.nom }}</div>
                </div>
            </div>

            <div class="form-actions">
                <a href="{{ path('app_attraction_edit', {'id': attraction.id}) }}" class="btn primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
                    Edit
                </a>
                {{ include('attraction/_delete_form.html.twig') }}
            </div>
        </div>
    </div>

    <style>
        /* Add these styles to match new.html.twig */
        .show-content {
            padding: 2rem;
        }

        .show-group {
            margin-bottom: 1.5rem;
            padding: 1rem;
            background: #f8fafc;
            border-radius: 8px;
        }

        .show-label {
            font-weight: 500;
            color: #4b5563;
            margin-bottom: 0.5rem;
            font-size: 0.875rem;
        }

        .show-value {
            color: #1e293b;
            font-size: 1rem;
            line-height: 1.5;
        }

        /* Keep existing styles from new.html.twig */
        :root {
            --primary-color: #2563eb;
            --secondary-color: #4b5563;
            --background-color: #f8fafc;
            --border-color: #e2e8f0;
            --hover-color: #1d4ed8;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background-color: var(--background-color);
            color: #1e293b;
            line-height: 1.5;
        }

        .page-container {
            width: 100%;
            max-width: 800px;
            padding: 2rem 1rem;
            margin: 0 auto;
        }

        .form-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .form-header {
            padding: 1.5rem 2rem;
            border-bottom: 1px solid var(--border-color);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .form-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #1e293b;
            margin: 0;
        }

        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--secondary-color);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s;
        }

        .back-link:hover {
            color: var(--primary-color);
        }

        .form-actions {
            display: flex;
            justify-content: flex-end;
            gap: 1rem;
            padding: 1.5rem 2rem;
            border-top: 1px solid var(--border-color);
        }

        .btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.2s;
            border: 1px solid transparent;
        }

        .btn.primary {
            background-color: var(--primary-color);
            color: white;
        }

        .btn.primary:hover {
            background-color: var(--hover-color);
        }

        @media (max-width: 640px) {
            .form-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }
        }
    </style>
{% endblock %}