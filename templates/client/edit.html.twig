{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
<div class="bg-gray-800 text-white min-h-screen"> 
    <div class="container mx-auto px-4 py-12">
        <div class="flex justify-center">
            <div class="w-full sm:w-96 p-8 bg-gray-900 rounded-lg shadow-lg">
                <h1 class="text-3xl font-semibold text-center mb-6">Edit Your Profile</h1>

                {% if form is defined %}
                    {{ form_errors(form) }}
                {% endif %}

                {{ form_start(form) }}
                    <div class="mb-4">
                        {{ form_row(form.email, {
                            'attr': {
                                'class': 'w-full px-4 py-3 rounded-lg bg-gray-700 border border-gray-600 text-white focus:outline-none focus:ring-2 focus:ring-blue-500'
                            }
                        }) }}
                    </div>
                    <div class="mb-4">
                        {{ form_row(form.nom, {
                            'attr': {
                                'class': 'w-full px-4 py-3 rounded-lg bg-gray-700 border border-gray-600 text-white focus:outline-none focus:ring-2 focus:ring-blue-500'
                            }
                        }) }}
                    </div>
                    <div class="mb-4">
                        {{ form_row(form.prenom, {
                            'attr': {
                                'class': 'w-full px-4 py-3 rounded-lg bg-gray-700 border border-gray-600 text-white focus:outline-none focus:ring-2 focus:ring-blue-500'
                            }
                        }) }}
                    </div>
                    <div class="mb-4">
                        {{ form_row(form.tel, {
                            'attr': {
                                'class': 'w-full px-4 py-3 rounded-lg bg-gray-700 border border-gray-600 text-white focus:outline-none focus:ring-2 focus:ring-blue-500'
                            }
                        }) }}
                    </div>
            
                    <div class="mb-6">
                        <button type="submit" class="w-full py-3 px-4 rounded-lg bg-blue-600 hover:bg-blue-700 text-white font-semibold focus:outline-none focus:ring-2 focus:ring-blue-500">
                            Save Changes
                        </button>
                    </div>
                {{ form_end(form) }}

                <div class="mt-4 text-center">
                    <p class="text-sm text-gray-300">
                        <a href="{{ path('client') }}" class="text-blue-400 hover:underline">Back to your profile</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
