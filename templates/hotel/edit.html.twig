{% extends 'back.html.twig' %}

{% block title %}Modifier un Hôtel{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }

        h1 {
            text-align: center;
            color: #007bff;
            font-weight: 600;
            font-size: 2rem;
            margin-bottom: 40px;
        }

        .form-card {
            background-color: #ffffff;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 40px;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
            padding: 12px 20px;
            font-size: 1.1rem;
            border-radius: 5px;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-back {
            background-color: #6c757d;
            color: white;
            padding: 12px 20px;
            font-size: 1.1rem;
            border-radius: 5px;
            font-weight: 600;
            text-decoration: none;
            margin-top: 20px;
            display: inline-block;
            text-align: center;
        }

        .btn-back:hover {
            background-color: #5a6268;
        }

        .delete-form {
            margin-top: 30px;
            text-align: center;
        }

        .delete-form button {
            background-color: #dc3545;
            color: white;
            font-size: 1.1rem;
            padding: 12px 20px;
            border-radius: 5px;
            font-weight: 600;
        }

        .delete-form button:hover {
            background-color: #c82333;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Modifier un Hôtel</h1>

    <div class="form-card">
        {{ include('hotel/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
    </div>

    <a href="{{ path('app_hotel_index') }}" class="btn-back">↩ Retour à la liste des hôtels</a>

    <div class="delete-form">
        {{ include('hotel/_delete_form.html.twig') }}
    </div>
{% endblock %}
