{% extends 'front.html.twig' %}

{% block title %}Liste des H√¥tels{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Global styles */
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f0f2f5;
            color: #333;
        }
        /* Section header styles */
        .section-header {
            text-align: center;
            padding: 20px 0;
        }
        .section-header h2 {
            font-size: 2rem;
            font-weight: 700;
        }
        .section-header p {
            font-size: 1.1rem;
            color: #666;
        }
        /* Hotel card styles */
        .explore-content .row {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }
        .single-explore-item {
            background: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s, box-shadow 0.2s;
            width: 100%;
            max-width: 350px;
        }
        .single-explore-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }
        .single-explore-img img {
            width: 100%;
            height: auto;
            display: block;
        }
        .single-explore-txt {
            padding: 15px;
        }
        .single-explore-txt h2 {
            font-size: 1.3rem;
            margin: 0 0 10px;
        }
        .explore-price-line {
            font-weight: bold;
            color: #007bff;
        }
        .explore-booking {
            text-align: center;
            margin-top: 10px;
        }
        .explore-booking a {
            background: #007bff;
            color: #fff;
            padding: 8px 12px;
            border-radius: 5px;
            text-decoration: none;
            font-weight: 600;
            transition: background 0.2s;
            border: none;
            cursor: pointer;
            margin: 0 5px;
        }
        .explore-booking a:hover {
            background: #0056b3;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="section-header">
        <h2>Liste des H√¥tels</h2>
        <p>D√©couvrez nos h√¥tels s√©lectionn√©s pour vous offrir la meilleure exp√©rience</p>
    </div>

    <div class="explore-content">
        <div class="row">
            {% for hotel in hotels %}
                <div class="col-md-4 col-sm-6">
                    <div class="single-explore-item">
                        <div class="single-explore-img">
                            <img src="{{ asset('uploads/hotels/' ~ hotel.Images) }}" alt="{{ hotel.nom }}">
                        </div>
                        <div class="single-explore-txt bg-theme-1">
                            <h2><a href="#">{{ hotel.nom }}</a></h2>
                            <p class="explore-price-line">
                                Prix: {{ hotel.prix }} ‚Ç¨
                            </p>

                            {# Display Average Rating #}
                            {% if hotel.getAverageRating() is not null %}
                                <p>‚≠ê rating sur hotel: {{ hotel.getAverageRating() }}/5</p>
                            {% else %}
                                <p>Aucun rating</p>
                            {% endif %}

                            
                            <div class="explore-booking">
                                <a href="{{ path('app_booking_new', {'id': hotel.id}) }}">üìÖ R√©server</a>
                                <a href="{{ path('app_hotel_rate', {'id': hotel.id}) }}" style="background:#28a745;">‚≠ê Noter cet h√¥tel</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="no-records">Aucun h√¥tel trouv√©</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
