{% extends 'back.html.twig' %}

{% block title %}Hotel index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }

        h1 {
            text-align: center;
            color: #007bff;
            font-weight: 600;
            font-size: 2rem;
            margin-bottom: 40px;
        }

        table {
            width: 100%;
            margin-bottom: 40px;
            border-collapse: collapse;
            background-color: #ffffff;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        table th, table td {
            padding: 15px;
            text-align: left;
            font-size: 1rem;
        }

        table th {
            background-color: #007bff;
            color: #fff;
        }

        table td {
            border-top: 1px solid #ddd;
        }

        table td a {
            margin-right: 10px;
            color: #007bff;
            text-decoration: none;
            font-weight: 600;
        }

        table td a:hover {
            text-decoration: underline;
        }

        .table-container {
            max-width: 1000px;
            margin: 0 auto;
        }

        .btn-create {
            display: block;
            text-align: center;
            background-color: #28a745;
            color: white;
            padding: 12px 20px;
            font-size: 1.1rem;
            border-radius: 5px;
            font-weight: 600;
            text-decoration: none;
            margin-top: 30px;
        }

        .btn-create:hover {
            background-color: #218838;
        }

        .no-records {
            text-align: center;
            font-size: 1.1rem;
            color: #6c757d;
            font-weight: 500;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Liste des Hôtels</h1>

    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Région</th>
                    <th>Nom</th>
                    <th>Adresse</th>
                    <th>Description</th>
                    <th>Email de contact</th>
                    <th>Téléphone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for hotel in hotels %}
                    <tr>
                        <td>{{ hotel.id }}</td>
                        <td>{{ hotel.region }}</td>
                        <td>{{ hotel.nom }}</td>
                        <td>{{ hotel.adresse }}</td>
                        <td>{{ hotel.description }}</td>
                        <td>{{ hotel.contactEmail }}</td>
                        <td>{{ hotel.phone }}</td>
                        <td>
                            <a href="{{ path('app_hotel_show', {'id': hotel.id}) }}">Voir</a>
                            <a href="{{ path('app_hotel_edit', {'id': hotel.id}) }}">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="no-records">Aucun hôtel trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('app_hotel_new') }}" class="btn-create">Créer un nouvel hôtel</a>
{% endblock %}
