
{% block body %}
<!-- Include Google Fonts and Material Icons -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<div class="container py-5">
    <!-- Main Card -->
    <div class="card border-0 shadow-lg rounded-4 overflow-hidden" style="max-width: 900px; margin: 0 auto; background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);">
        <!-- Card Header -->
        <div class="card-header bg-dark text-white py-4 border-0">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0 fw-bold">
                    <i class="material-icons me-3">assignment</i>Détails de la Participation
                </h1>
                <span class="badge bg-light text-dark fs-6 px-3 py-2 rounded-pill">ID: #{{ participation.id }}</span>
            </div>
        </div>

        <!-- Card Body -->
        <div class="card-body p-5">
            <!-- Table Section -->
            <div class="table-responsive">
                <table class="table table-detail mb-0">
                    <tbody>
                        <tr>
                            <th class="text-nowrap ps-3 fw-semibold text-muted">
                                <i class="material-icons me-2">person</i>Utilisateur
                            </th>
                            <td class="text-end pe-3 fw-bold">{{ participation.utilisateur }}</td>
                        </tr>
                        <tr>
                            <th class="text-nowrap ps-3 fw-semibold text-muted">
                                <i class="material-icons me-2">confirmation_number</i>Nombre de places
                            </th>
                            <td class="text-end pe-3 fw-bold">{{ participation.nombrePlaces }}</td>
                        </tr>
                        <tr>
                            <th class="text-nowrap ps-3 fw-semibold text-muted">
                                <i class="material-icons me-2">location_on</i>Région de l'événement
                            </th>
                            <td class="text-end pe-3 fw-bold">{{ participation.evenement.region }}</td>
                        </tr>
                        <tr>
                            <th class="text-nowrap ps-3 fw-semibold text-muted">
                                <i class="material-icons me-2">event</i>Nom de l'événement
                            </th>
                            <td class="text-end pe-3 fw-bold">{{ participation.evenement.Nom }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between mt-5 pt-4">
                <a href="{{ path('evenement_liste') }}" class="btn btn-outline-dark px-4 py-2 rounded-pill fw-semibold d-flex align-items-center">
                    <i class="material-icons me-2">arrow_back</i>Retour à la liste
                </a>

                <div class="d-flex gap-3">
                    <a href="{{ path('app_participation_edit', {'id': participation.id}) }}" class="btn btn-primary px-4 py-2 rounded-pill fw-semibold d-flex align-items-center">
                        <i class="material-icons me-2">edit</i>Modifier
                    </a>
                    {{ include('participation/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Global Styles */
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }

    .card {
        border-radius: 16px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
    }

    .card-header {
        background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
    }

    .table-detail {
        width: 100%;
    }

    .table-detail th, .table-detail td {
        padding: 1rem;
        vertical-align: middle;
    }

    .table-detail th {
        font-weight: 500;
        color: #6c757d;
    }

    .table-detail td {
        font-weight: 600;
        color: #212529;
    }

    .table-detail tr:not(:last-child) {
        border-bottom: 2px solid #f1f3f5;
    }

    .btn {
        transition: all 0.3s ease;
        font-size: 1rem;
        padding: 0.75rem 1.5rem;
        border-radius: 30px;
        display: inline-flex;
        align-items: center;
    }

    .btn-outline-dark {
        border-color: #2c3e50;
        color: #2c3e50;
    }

    .btn-outline-dark:hover {
        background-color: #2c3e50;
        color: white;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    .material-icons {
        font-size: 1.25rem;
        vertical-align: middle;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .card-body {
            padding: 2rem;
        }

        .d-flex {
            flex-direction: column;
            gap: 1rem;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }
    }
   
   


</style>
{% endblock %}