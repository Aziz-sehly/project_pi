{# templates/participation/index.html.twig #}

<!-- Success Alert -->
{% for message in app.flashes('success') %}
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        <i class="fas fa-check-circle me-2"></i>{{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{% endfor %}

<!-- Delete Form with Confirmation -->
<form method="post" action="{{ path('app_participation_delete', {'id': participation.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ participation.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>

<style>
    .alert {
        border-radius: 0.75rem;
        padding: 1rem;
        font-size: 1.1rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .alert-success {
        background-color: #d4edda;
        border-color: #c3e6cb;
        color: #155724;
    }

    .alert .fas {
        font-size: 1.5rem;
    }

    .alert-dismissible .btn-close {
        opacity: 1;
        color: #155724;
        font-size: 1.25rem;
        background: transparent;
        border: none;
    }

    .btn-danger {
        background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
        border: none;
        color: white;
        padding: 1rem 2rem;
        border-radius: 0.75rem;
        font-weight: 600;
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .btn-danger:hover {
        background: linear-gradient(135deg, #c0392b 0%, #e74c3c 100%);
    }

    .btn-danger:active {
        background: #c0392b;
    }

    .btn-danger i {
        margin-right: 0.5rem;
    }

    /* Animation pour l'alerte */
    @keyframes slideIn {
        from { opacity: 0; transform: translateY(-10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .alert-dismissible {
        animation: slideIn 0.3s ease-out;
    }
</style>
