{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-lg">
        <h1 class="text-2xl font-semibold text-center text-gray-800 mb-6">Reset your password</h1>

        {{ form_start(resetForm) }}
            <div class="mb-4">
                {{ form_row(resetForm.plainPassword, {
                    'attr': {
                        'class': 'w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500'
                    }
                }) }}
            </div>

            <div class="flex justify-center">
                <button type="submit" class="w-full py-2 px-4 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    Reset password
                </button>
            </div>
        {{ form_end(resetForm) }}
    </div>
{% endblock %}
