{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="bg-red-500 text-white p-4 mb-4 rounded-md shadow-md" role="alert">{{ flash_error }}</div>
    {% endfor %}
    
    <div class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-lg">
        <h1 class="text-2xl font-semibold text-center mb-6">Reset your password</h1>

        {{ form_start(requestForm) }}
            <div class="mb-4">
                {{ form_row(requestForm.email, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
            </div>

            <div class="mb-4 text-sm text-gray-600">
                <p>Enter your email address, and we will send you a link to reset your password.</p>
            </div>

            <div class="flex justify-center">
                <button type="submit" class="w-full py-2 px-4 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    Send password reset email
                </button>
            </div>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
