{% extends 'base.html.twig' %}

{% block title %}Créer une réservation{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh; background: linear-gradient(135deg, #f0f2f5, #dde1e7);">
    <div class="card p-5 shadow-lg rounded-lg" style="max-width: 700px; width: 100%; background-color: #ffffff;">
        <h3 class="text-center text-primary mb-4">Créer une réservation</h3>

        {{ form_start(form, { 'attr': {'novalidate': 'novalidate'} }) }}

        <div class="mb-4">
            <label for="{{ form.utilisateur.vars.id }}" class="form-label text-muted">Nom de l'utilisateur</label>
            {{ form_widget(form.utilisateur, { 'attr': {'class': 'form-control', 'placeholder': 'Nom de l\'utilisateur'} }) }}
            <div class="invalid-feedback">
                {{ form_errors(form.utilisateur) }}
            </div>
        </div>

        <div class="mb-4">
            <label for="{{ form.id_hotel.vars.id }}" class="form-label text-muted">Hôtel</label>
            {{ form_widget(form.id_hotel, { 'attr': {'class': 'form-control', 'placeholder': 'Sélectionner un hôtel'} }) }}
            <div class="invalid-feedback">
                {{ form_errors(form.id_hotel) }}
            </div>
        </div>

        <div class="mb-4">
            <label for="{{ form.check_in.vars.id }}" class="form-label text-muted">Date d'arrivée</label>
            {{ form_widget(form.check_in, { 'attr': {'class': 'form-control', 'placeholder': 'Date d\'arrivée'} }) }}
            <div class="invalid-feedback">
                {{ form_errors(form.check_in) }}
            </div>
        </div>

        <div class="mb-4">
            <label for="{{ form.check_out.vars.id }}" class="form-label text-muted">Date de départ</label>
            {{ form_widget(form.check_out, { 'attr': {'class': 'form-control', 'placeholder': 'Date de départ'} }) }}
            <div class="invalid-feedback">
                {{ form_errors(form.check_out) }}
            </div>
        </div>

        <div class="mb-4">
            <label for="{{ form.montant_total.vars.id }}" class="form-label text-muted">Montant en avance (€)</label>
            {{ form_widget(form.montant_total, { 'attr': {'class': 'form-control', 'placeholder': 'Montant en avance'} }) }}
            <div class="invalid-feedback">
                {{ form_errors(form.montant_total) }}
            </div>
        </div>

        <div class="mb-4">
            <label for="{{ form.number_of_guest.vars.id }}" class="form-label text-muted">Nombre d'invités</label>
            {{ form_widget(form.number_of_guest, { 'attr': {'class': 'form-control', 'placeholder': 'Nombre d\'invités'} }) }}
            <div class="invalid-feedback">
                {{ form_errors(form.number_of_guest) }}
            </div>
        </div>

        <div class="mb-4">
            <label for="{{ form.payement_method.vars.id }}" class="form-label text-muted">Méthode de paiement</label>
            {{ form_widget(form.payement_method, { 'attr': {'class': 'form-control', 'placeholder': 'Méthode de paiement'} }) }}
            <div class="invalid-feedback">
                {{ form_errors(form.payement_method) }}
            </div>
        </div>

        <div class="mb-4">
            <label for="{{ form.special_request.vars.id }}" class="form-label text-muted">Demande spéciale</label>
            {{ form_widget(form.special_request, { 'attr': {'class': 'form-control', 'placeholder': 'Demande spéciale'} }) }}
            <div class="invalid-feedback">
                {{ form_errors(form.special_request) }}
            </div>
        </div>

        <div class="d-grid gap-2 mb-3">
            <button type="submit" class="btn btn-primary btn-lg">Enregistrer la réservation</button>
        </div>

        <div class="d-grid gap-2">
            <a href="{{ path('hotel_liste') }}" class="btn btn-secondary btn-lg">annuler la reservation</a>
        </div>

        {{ form_end(form) }}
    </div>
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
    }

    .container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #f0f2f5, #dde1e7); /* Doux gradient */
    }

    .card {
        border-radius: 20px;
        padding: 30px;
        width: 100%;
        background-color: #ffffff;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    h3 {
        font-size: 1.8rem;
        font-weight: bold;
        color: #007bff;
    }

    .form-label {
        font-weight: 600;
        font-size: 1rem;
        color: #6c757d;
    }

    .form-control {
        font-size: 1rem;
        padding: 12px;
        border-radius: 8px;
        border: 1px solid #ddd;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 10px rgba(0, 123, 255, 0.2);
    }

    .invalid-feedback {
        font-size: 0.875rem;
        color: #dc3545;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 15px;
        font-size: 1.2rem;
        border-radius: 30px;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        padding: 15px;
        font-size: 1.2rem;
        border-radius: 30px;
        transition: background-color 0.3s ease;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    /* Adding some spacing around the fields for a better structure */
    .mb-4 {
        margin-bottom: 1.5rem;
    }

    .d-grid {
        margin-top: 20px;
    }
</style>
{% endblock %}
