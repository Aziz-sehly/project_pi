{% extends 'shop/admin/base.html.twig' %}

{% block body %}
<div class="container py-5">
    <h1 class="text-center text-primary fw-bold">Welcome to Our Shop</h1>

    {# Featured Section #}
    <div class="my-5 p-4 bg-light shadow-sm rounded text-center">
        <h2 class="text-success">ðŸ”¥ Special Offers ðŸ”¥</h2>
        <p class="lead">Check out our best deals and latest arrivals!</p>
        <a href="#" class="btn btn-danger btn-lg fw-semibold">Explore Deals</a>
    </div>

    {# Product List #}
    <div class="row g-4">
        {% for product in products %}
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <img src="{{ product.imageUrl ?? 'https://via.placeholder.com/300' }}" class="card-img-top" alt="{{ product.name }}">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">{{ product.name }}</h5>
                        <p class="card-text text-muted">{{ product.description|slice(0, 100) }}...</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-bold text-primary">${{ product.price }}</span>
                            <a href="{{ path('cart_add', {'id': product.id}) }}" class="btn btn-success btn-sm">
                                <i class="fas fa-cart-plus"></i> Add to Cart
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center text-muted">
                <p>No products available at the moment.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

