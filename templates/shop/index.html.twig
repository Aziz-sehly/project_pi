{% extends 'base.html.twig' %}

{% block body %}
    <h1>Shop</h1>
    <div>
        {% for product in products %}
            <div>
                <h2>{{ product.name }}</h2>
                <p>{{ product.description }}</p>
                <p>Price: ${{ product.price }}</p>
              <a href="{{ path('cart_add', {'id': product.id}) }}">Add to Cart</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
