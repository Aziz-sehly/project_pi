{# templates/payment/checkout.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <h1>Checkout</h1>

    <h2>Your Cart Summary</h2>
    
    {% if products is empty %}
        <p>Your cart is empty!</p>
        <a href="{{ path('shop') }}" class="btn btn-primary">Go to Shop</a>
    {% else %}
        <table>
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                {% for item in products %}
                    <tr>
                        <td>{{ item.name }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>${{ item.price }}</td>
                        <td>${{ item.quantity * item.price }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <h3>Total: ${{ order.total }}</h3>

        <form action="{{ path('payment_process') }}" method="POST">
            <button type="submit" class="btn btn-success">Pay with PayPal</button>
        </form>
    {% endif %}
{% endblock %}

