{% extends 'shop/admin/base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center text-primary fw-bold mb-4">Checkout</h1>

        <h2 class="text-center mb-4">Your Cart Summary</h2>
        
        {% if products is empty %}
            <div class="alert alert-warning text-center" role="alert">
                Your cart is empty! <a href="{{ path('shop') }}" class="alert-link">Go to Shop</a>
            </div>
        {% else %}
            <div class="card shadow-lg p-4">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in products %}
                            <tr>
                                <td>{{ item.name }}</td>
                                <td>{{ item.quantity }}</td>
                                <td>${{ item.price | number_format(2) }}</td>
                                <td>${{ (item.quantity * item.price) | number_format(2) }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <h3 class="text-end fw-bold">Total: ${{ order.total | number_format(2) }}</h3>

                <form action="{{ path('payment_process') }}" method="POST" class="mt-4">
                    <button type="submit" class="btn btn-success btn-lg w-100">Pay with PayPal</button>
                </form>
            </div>
        {% endif %}
    </div>
{% endblock %}

