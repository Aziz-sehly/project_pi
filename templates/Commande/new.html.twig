{# templates/commande/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}New Order{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Order {{ product.name }}</h1>

    <form method="post" action="{{ path('app_commande_new', {'id': product.id}) }}">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">Place Order</button>
        {{ form_end(form) }}
    </form>
</div>
{% endblock %}
