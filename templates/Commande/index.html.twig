{# templates/commande/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Orders{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Orders</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Total Price (â‚¬)</th>
                <th>Order Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for commande in commandes %}
                <tr>
                    <td>{{ commande.product.name }}</td>
                    <td>{{ commande.quantity }}</td>
                    <td>{{ commande.totalPrice }}</td>
                    <td>{{ commande.orderDate ? commande.orderDate|date('d/m/Y H:i') : 'N/A' }}</td>
                    <td>
                        <a href="{{ path('app_commande_edit', {'id': commande.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                        <a href="{{ path('app_commande_cancel', {'id': commande.id}) }}" class="btn btn-danger btn-sm">Cancel</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

