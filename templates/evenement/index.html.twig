{% extends 'back.html.twig' %}

{% block title %}Liste des Événements{% endblock %}

{% block body %}
<div class="container mt-5 p-4 shadow-lg rounded" style="background-color: white;">
    <h1 class="text-center text-primary fw-bold"> Liste des Événements</h1>

    <div class="d-flex justify-content-end mb-3">
        <a href="{{ path('app_evenement_new') }}" class="btn btn-success fw-semibold">
            Ajouter un événement
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-striped border shadow-sm">
            <thead class="table-dark text-center">
                <tr>
                    <th>#</th>
                    <th>Région</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Capacité</th>
                    <th>Prix (€)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="text-center">
            {% for evenement in evenements %}
                <tr>
                    <td class="fw-bold">{{ evenement.id }}</td>
                    <td>{{ evenement.region }}</td>
                    <td class="fw-semibold">{{ evenement.nom }}</td>
                    <td>{{ evenement.description|slice(0, 50) }}...</td>
                    <td>{{ evenement.date ? evenement.date|date('d/m/Y H:i') : 'Non défini' }}</td>
                    <td>{{ evenement.capacite }}</td>
                    <td><span class="badge bg-primary">{{ evenement.prix }} €</span></td>
                    <td>
                        <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" class="btn btn-primary btn-sm me-2">
                            Voir
                        </a>
                        <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-warning btn-sm">
                            Modifier
                        </a>
                         </a>
                 
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8" class="text-center text-muted">Aucun événement trouvé.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a href="{{ path('app_evenement_index') }}" class="btn btn-outline-secondary fw-semibold">
            Retour à la liste
        </a>
    </div>
</div>
{% endblock %}
