{% extends 'back.html.twig' %}



{% block title %}Détails de l'Événement{% endblock %}

{% block body %}
<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 p-4" style="max-width: 800px; background-color: white; border-radius: 15px;">
        <h1 class="text-center text-primary fw-bold">Détails de l'Événement</h1>

        <div class="row mt-4">
            <div class="col-12">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between">
                        <span class="fw-bold"><i class="bi bi-tag"></i> ID :</span>
                        <span>{{ evenement.id }}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span class="fw-bold"><i class="bi bi-geo-alt"></i> Région :</span>
                        <span>{{ evenement.region }}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span class="fw-bold"><i class="bi bi-file-text"></i> Nom :</span>
                        <span class="fw-semibold">{{ evenement.nom }}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span class="fw-bold"><i class="bi bi-card-text"></i> Description :</span>
                        <span class="text-muted">{{ evenement.description }}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span class="fw-bold"><i class="bi bi-calendar-event"></i> Date :</span>
                        <span>{{ evenement.date ? evenement.date|date('d/m/Y H:i') : 'Non définie' }}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span class="fw-bold"><i class="bi bi-people"></i> Capacité :</span>
                        <span>{{ evenement.capacite }}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span class="fw-bold"><i class="bi bi-cash"></i> Prix :</span>
                        <span class="badge bg-primary">{{ evenement.prix }} €</span>
                    </li>
                </ul>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_evenement_index') }}" class="btn btn-outline-secondary fw-semibold">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
   
            <div>
                <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-warning fw-semibold me-2">
                    <i class="bi bi-pencil-square"></i> Modifier
                </a>
                {{ include('evenement/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
