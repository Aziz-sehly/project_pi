{% extends 'back.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center text-primary fw-bold mb-4">Shopping Cart</h1>
        <div class="card shadow p-4">
            {% if cart is not empty %}
                <ul class="list-group">
                    {% for item in cart %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>
                                <strong>{{ item.product.name }}</strong> - {{ item.quantity }} x ${{ item.product.price | number_format(2) }}
                            </span>
                            <a href="{{ path('cart_remove', {'id': item.product.id}) }}" class="btn btn-danger btn-sm">Remove</a>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <div class="alert alert-warning" role="alert">
                    Your cart is empty. Add some products to continue.
                </div>
            {% endif %}
        </div>

        <div class="text-center mt-4">
            <a href="{{ path('payment_checkout') }}" class="btn btn-success btn-lg">Proceed to Checkout</a>
        </div>
    </div>
{% endblock %}

