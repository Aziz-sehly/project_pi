{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4 border-0" style="background-color: white; max-width: 700px; margin: auto;">
        <h1 class="text-center text-primary fw-bold mb-4">Edit Product</h1>

        <div class="p-3 shadow-sm rounded bg-light">
            <form method="post" action="{{ path('app_product_edit', {'id': product.id}) }}">
                {{ form_start(form) }}
                {{ form_row(form) }}
                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_product_index') }}" class="btn btn-outline-secondary fw-semibold">
                        <i class="bi bi-arrow-left"></i> Back to list
                    </a>
                    <button type="submit" class="btn btn-success fw-semibold">
                        <i class="bi bi-check-circle"></i> Update
                    </button>
                </div>
                {{ form_end(form) }}
            </form>
        </div>
    </div>
</div>
{% endblock %}
