{% extends 'base.html.twig' %}

{% block title %}Admin - Edit User
{% endblock %}

{% block body %}
	<div class="min-h-screen bg-gray-900 flex items-center justify-center">
		<div class="bg-gray-100 shadow-lg rounded-lg p-8 w-full max-w-2xl">
			<h1 class="text-3xl font-semibold text-center mb-6 text-blue-500">Edit User</h1>

			{{ form_start(form) }}
			<div class="space-y-4">
				<div>
					<label class="block text-gray-700 font-medium mb-2">{{ form_label(form.email) }}</label>
					{{ form_widget(form.email, { 'attr': {'class': 'w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-400 focus:border-blue-500'} }) }}
					{{ form_errors(form.email) }}
				</div>

				<div>
					<label class="block text-gray-700 font-medium mb-2">{{ form_label(form.nom) }}</label>
					{{ form_widget(form.nom, { 'attr': {'class': 'w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-400 focus:border-blue-500'} }) }}
					{{ form_errors(form.nom) }}
				</div>

				<div>
					<label class="block text-gray-700 font-medium mb-2">{{ form_label(form.prenom) }}</label>
					{{ form_widget(form.prenom, { 'attr': {'class': 'w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-400 focus:border-blue-500'} }) }}
					{{ form_errors(form.prenom) }}
				</div>

				<div>
					<label class="block text-gray-700 font-medium mb-2">{{ form_label(form.tel) }}</label>
					{{ form_widget(form.tel, { 'attr': {'class': 'w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-400 focus:border-blue-500'} }) }}
					{{ form_errors(form.tel) }}
				</div>

				<!-- Role Selection Dropdown -->
				<div>
					<label class="block text-gray-700 font-medium mb-2">User Role</label>
					{{ form_widget(form.roles, { 
                            'attr': { 
                                'class': 'w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-400 focus:border-blue-500'
                            } 
                        }) }}
					{{ form_errors(form.roles) }}
				</div>

			</div>

			<div class="mt-6 flex justify-end">
				<button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg focus:outline-none focus:shadow-outline transition duration-300">
					Save Changes
				</button>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
